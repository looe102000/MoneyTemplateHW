@model MoneyTemplateHW.Models.ViewModels.MoneyBookViewModel

@{
    ViewBag.Title = "我的記帳本";
}
<style>
    /*為了符合設計師版型*/
    input, select, textarea {
        max-width: none;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="well">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => Model.category, "類別", htmlAttributes: new { @class = "col-md-2 control-label " })
                <div class="col-sm-10">
                    @Html.DropDownList("category", new SelectList(Model.categorySelectItemList, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.money, "金額", htmlAttributes: new { @class = "col-md-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.money, new { htmlAttributes = new { @class = "form-control", @Value = "", @placeholder = "金額" } })
                    @Html.ValidationMessageFor(model => model.money, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.date, "日期", htmlAttributes: new { @class = " col-md-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control", @Value = "", @placeholder = "日期" } })
                    @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.description, "備註", htmlAttributes: new { @class = " col-md-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(model => model.description, 0, 0, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-8 col-sm-4">
                    <button type="submit" class="btn btn-default">送出</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>#</th>
                    <th>類別</th>
                    <th>日期</th>
                    <th>金額</th>
                </tr>
                @{

                    foreach (var item in Model.MoneyBookData_List.Select((value, index) => new { index, value }))
                    {
                        <tr>
                            <td>@(item.index +1 )</td>
                            <td>@(item.value.category)</td>
                            <td>@(item.value.date.ToString("yyyy-MM-dd"))</td>
                            <td>@(item.value.money.ToString("N"))</td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>

}
